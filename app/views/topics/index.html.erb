<p id="notice"><%= notice %></p>

<h1>Open Topics</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th>Finished flg</th>
      <th>Page</th>
      <th>Comments</th>
      <th>Label</th>
      <th colspan="7"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.where(finished_flg: false).each do |topic| %>
    <tr>
      <td><%= "#{topic.title} ##{topic.id}" %></td>
      <td><%= topic.body %></td>
      <td><%= topic.user.username %></td>
      <td><%= topic.finished_flg %></td>
      <td><%= topic.page %></td>
      <td><%= topic.comments.count %></td>
      <% topic.label.each do |label| %>
        <td><%= label.name %></td>
      <% end %>
      <td><%= link_to 'Show', topic %></td>
      <td><%= link_to 'Edit', edit_topic_path(topic) %></td>
      <td><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <td><%= link_to 'Edit Label', edit_label_topic_path(topic) %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<p><%= link_to 'New Topic', new_topic_path %></p>
<p><%= link_to 'Archived Topics', show_archived_topics_path %></p>